rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to the highScore document within the scores collection
    match /scores/highScore {
      allow read, write: if true; // Allows anyone to read/write the high score
                                   // Consider adding authentication later: if request.auth != null;
    }

    // You might want to deny access to other paths by default
    // match /{document=**} {
    //   allow read, write: if false;
    // }
  }
}